{
  "name": "avviare-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "babel-node index.js",
    "dev": "nodemon index.js --exec babel-node",
    "db:seed": "yarn db:drop && babel-node db/scripts/seed.js",
    "db:drop": "babel-node db/scripts/drop.js",
    "lint": "eslint",
    "prettier": "prettier --write \"**/*.{js,graphql,json,css}\"",
    "format": "prettier --write"
  },
  "dependencies": {
    "@graphql-tools/schema": "^7.0.0",
    "@graphql-tools/utils": "^7.0.0",
    "apollo-server-express": "^2.18.2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "14.7.0",
    "mongoose": "^5.10.10",
    "mongoose-delete": "^0.5.2",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format . && git add . && pretty-quick --staged",
      "pre-push": "yarn lint ."
    }
  }
}
